                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiciuProcedura.Procedura.Denumire)
                </td>
                <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        @Html.ActionLink("Edit|", "Edit", new { id = item.ProgramareID })

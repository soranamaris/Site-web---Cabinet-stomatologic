@model IEnumerable<Licenta1.Programare>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Index";
    var currentUserId = User.Identity.GetUserId();
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
